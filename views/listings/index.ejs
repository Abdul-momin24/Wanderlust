<% layout("/layouts/boilerplate") %>

    <h2>All listings are Here</h2>
<div class="row row-cols-lg-3 row-colg-md-2 row-cols-sm-1 ">
    <% for(let listing of printinglistings){ %>
        <a href="listings/<%= listing.id %>" class="show-image">
             <div class="card col" >
                    <img src="<%= listing.img.url %>" class="card-img-top" alt="..." style="height: 20rem;">
                <div class="card-img-overlay"> </div>
                    <div class="card-body">
                        <p class="card-text"><%= listing.title %> <br>
                            <b> &#8377; <%= listing.price.toLocaleString("en-IN")%></b> /night
                        </p>
                    </div>
                </div>   
        </a>
        <%}%>
</div> 
</div>

<form method="get" action="listings/new">
    <button>Create new listing</button>
</form>